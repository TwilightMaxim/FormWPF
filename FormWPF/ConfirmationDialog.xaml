<Window x:Class="FormWPF.ConfirmationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FormWPF"
        mc:Ignorable="d"
        Title="ConfirmationDialog" Height="167" Width="213">
    <Grid Margin="0,0,0,-6">
        <Label Content="Внимание:" HorizontalAlignment="Left" Margin="65,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Есть не текстовые символы, &#xD;&#xA;очистить?" HorizontalAlignment="Left" Margin="10,36,0,0" VerticalAlignment="Top" Height="56" Width="178"/>
        <Button Content="Очистить" HorizontalAlignment="Left" Margin="10,97,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <Button Content="Оставить" HorizontalAlignment="Left" Margin="126,97,0,0" VerticalAlignment="Top" Click="Button_Click_1"/>
    </Grid>
</Window>
